<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".RegistroDestinatario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:elevation="8dp">

            <ImageButton
                android:id="@+id/btnReturnDesription"
                android:layout_width="60dp"
                android:layout_height="49dp"
                android:background="@color/colorPrimaryDark"
                app:srcCompat="@drawable/ic_devolver" />

        </RelativeLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/titlefachada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="56dp"
        android:layout_marginRight="26dp"
        android:text="Destinatario:"
        android:textColor="@color/coloBlack"
        android:textSize="24dp"
        android:textStyle="bold" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtClientesDes2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:text="Tipo De Documento:"
                android:textColor="@color/coloBlack"
                android:textSize="14dp"
                android:textStyle="bold"
                android:visibility="visible" />

            <Spinner
                android:id="@+id/lstDocumento2"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/txtClientesDes"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/txtDocumentoDest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="26dp"
                android:layout_marginLeft="26dp"
                android:singleLine="true"
                android:inputType="number"
                android:hint="Nro. Documento"
                android:backgroundTint="@color/colorPrimary"
                />

            <EditText
                android:id="@+id/txtNombreDest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="26dp"
                android:layout_marginLeft="26dp"
                android:singleLine="true"
                android:inputType="textPersonName"
                android:hint="Nombre"
                android:backgroundTint="@color/colorPrimary"
                />

            <EditText
                android:id="@+id/txtApellidoDest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNombreDest"
                android:layout_marginRight="26dp"
                android:layout_marginLeft="26dp"
                android:singleLine="true"
                android:inputType="textPersonName"
                android:hint="Apellido"
                android:backgroundTint="@color/colorPrimary"
                />

            <EditText
                android:id="@+id/txtCompaniaCli2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtApellidoCli"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:backgroundTint="@color/colorPrimary"
                android:hint="CompaÃ±ia"
                android:inputType="textPersonName"
                android:singleLine="true" />

            <EditText
                android:id="@+id/txtDirDest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtApellidoDest"
                android:layout_marginRight="26dp"
                android:layout_marginLeft="26dp"
                android:singleLine="true"
                android:inputType="textPersonName"
                android:hint="Direccion"
                android:backgroundTint="@color/colorPrimary"
                />

            <EditText
                android:id="@+id/txtEmailDest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDirDest"
                android:layout_marginRight="26dp"
                android:layout_marginLeft="26dp"
                android:singleLine="true"
                android:inputType="textPersonName"
                android:hint="Email"
                android:backgroundTint="@color/colorPrimary"
                />
            <EditText
                android:id="@+id/txtCelularDest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtEmailDest"
                android:layout_marginRight="26dp"
                android:layout_marginLeft="26dp"
                android:singleLine="true"
                android:inputType="number"
                android:hint="Celular"
                android:backgroundTint="@color/colorPrimary"
                />

            <Button
                android:id="@+id/btnContinuarDest"
                android:layout_width="242dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/styel_button"
                android:text="Continuar"
                android:textColor="#fff"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btnActualizarC2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/styel_button"
                android:text="Editar"
                android:textColor="#fff"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>



</LinearLayout>