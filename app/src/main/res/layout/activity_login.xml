<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.appetesg.estusolucionTranscarga.LoginActivity">

    <EditText
        android:id="@+id/txtEmail"
        android:hint="Email"
        android:background="#fff"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="276dp"
        android:ems="10"
        android:padding="6dp"
        android:inputType="textPersonName"
        />

<!--    <android.support.design.widget.TextInputLayout-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtPasswordLayout"
        app:passwordToggleEnabled="true"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignTop="@+id/txtEmail"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:background="#fff"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="2dp"
            android:background="#fff"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>




    <Spinner
        android:id="@+id/sprColegios"
        android:layout_width="245dp"
        android:layout_height="48dp"
        android:layout_alignLeft="@+id/txtPasswordLayout"
        android:layout_alignRight="@+id/txtPasswordLayout"
        android:layout_below="@id/txtPasswordLayout"
        android:layout_marginRight="107dp"></Spinner>



    <Button
        android:id="@+id/btnLogin"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="91dp"
        android:background="@drawable/styel_button"
        android:text="Ingresar"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btnRegistro"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:background="@drawable/style_button_border"
        android:text="Registrate Aqui"
        android:textColor="@color/coloBlack" />



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="333dp"
        android:layout_height="358dp"
        android:layout_above="@+id/txtEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        app:srcCompat="@drawable/ic_launcher_js"/>
    <ProgressBar

        android:id="@+id/progress"
        android:visibility="gone"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:id="@+id/chkRecordar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtPasswordLayout"
        android:layout_alignLeft="@+id/txtPasswordLayout"
        android:layout_alignRight="@+id/txtPasswordLayout"
        android:layout_alignStart="@+id/txtPasswordLayout"
        android:layout_below="@id/sprColegios"
        android:text="Recordar credenciales" />

    <TextView
        android:id="@+id/lblVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/lblRecordar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtEmail"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="201dp"
        android:autoLink="all"
        android:text="Restaurar clave?"
        android:textColor="#0000FF"
        android:layout_alignRight="@+id/txtEmail" />
</RelativeLayout>
