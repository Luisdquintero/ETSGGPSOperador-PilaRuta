<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertarImagenDocumentoActivity">

    <include layout="@layout/tool_bar"
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </include>

            <ImageView
                android:id="@+id/imgFotoDocumento"
                android:layout_width="267dp"
                android:layout_height="190dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="59dp"
                android:layout_marginTop="102dp"
                android:gravity="center"
                app:srcCompat="@drawable/ic_image_fondo" />

            <ImageButton
                android:id="@+id/imbFotoDocumento"
                android:layout_width="109dp"
                android:layout_height="91dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="200dp"
                android:layout_marginStart="136dp"
                android:background="@drawable/ic_camera_azul" />

            <ImageButton
                android:id="@+id/imbFotoBorrarDocumento"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="52dp"
                android:layout_marginTop="87dp"
                android:background="@drawable/delete" />

    <Button
        android:id="@+id/btnEnviarfoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_rounded"
        android:text="Enviar"
        android:textColor="#ffff" />

</RelativeLayout>