    <TextView
        android:id="@+id/txtCantidad"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_below="@+id/edPesoEnvio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Cantidad:"
        android:textColor="@color/coloBlack"
        android:textSize="14dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edPiezasEnvio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/txtCantidad"
        android:inputType="number"
        android:singleLine="true"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:backgroundTint="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/txtVR"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_below="@+id/edPiezasEnvio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="VR. Declarado:"
        android:textColor="@color/coloBlack"
        android:textSize="14dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edValorDeclarado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtVR"
        android:layout_marginBottom="5dp"
        android:inputType="number"
        android:singleLine="true"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:backgroundTint="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/txtSeg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edValorDeclarado"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:text="VR. Seguro:"
        android:textColor="@color/coloBlack"
        android:textSize="14dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edValorSeg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtSeg"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/colorPrimary"
        android:inputType="number"
        android:singleLine="true" />

    <TextView
        android:id="@+id/txtVRG"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:layout_below="@+id/edValorSeg"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:gravity="center"
        android:textSize="40dp" />

    <Button
        android:id="@+id/btnContinuarG1"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="91dp"
        android:background="@drawable/styel_button"
        android:text="Continuar"
        android:textColor="#fff" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/ftbClienteCorp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnContinuarG1"
        android:layout_alignRight="@id/edPesoEnvio"
        android:layout_marginTop="-95dp"
        android:clickable="true"
        app:backgroundTint="@color/colorPrimary"
        app:srcCompat="@drawable/cliente"
        tools:ignore="VectorDrawableCompat" />

